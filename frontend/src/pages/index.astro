---
import "../styles/global.css";
import Header from "../layouts/Header";
import Survey from "../components/ui/Survey"

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>demo-survey-container</title>
  </head>
  <body class="text-black bg-white dark:text-white dark:bg-neutral-800">
    <main class="flex flex-col flex-1 w-full min-h-screen">
      <Header client:load />

      <div class="flex items-center justify-center flex-1">
        <section
          class="flex flex-col items-center gap-4 w-full max-w-[50rem] p-4"
        >
          <h1 class="">Funcionando Astro y Tailwind</h1>

          <Survey client:load />
          
        </section>
      </div>
    </main>
  </body>
</html>
